<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <h3>Toaster Widget</h3>
        <g:Button ui:field="fetchButton" text="Fetch Toaster"/><br/>
        <label>Name:</label><br/>
        <g:TextBox ui:field="name"/><br/>
        <label>Coordinates (x, y, z):</label><br/>
        <g:TextBox ui:field="coordinates"/><br/>
        <label>Power:</label><br/>
        <g:TextBox ui:field="power"/><br/>
    </g:HTMLPanel>
</ui:UiBinder>
